<% if notice %><div class="callout primary"><%= notice %></div> <% end %>
<h3>Listing Booleans</h3>
<div class="callout secondary">Baas: Booleans as a Service (<a href="https://booleans.io" target="_booleans">https://booleans.io</a>)</div>

<table class="stack hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>API ID</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @boolios.each do |boolio| %>
      <tr>
        <td><%= boolio.id %></td>
        <td><%= boolio.api_id %></td>
        <td>
          <% if boolio.val %>
            <span class="success label">TRUE</span>
          <% else %>
            <span class="alert label">FALSE</span>
          <% end %>
        </td>
        <td>
          <%= link_to boolio do %>
            <i class="fi-magnifying-glass"></i>
          <% end %>
          <%= link_to edit_boolio_path(boolio) do %>
            <i class="fi-pencil"></i>
          <% end %>
          <%= link_to boolio, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fi-x"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_boolio_path, class: 'button' do %> <i class="fi-plus"></i> Create New <% end %>